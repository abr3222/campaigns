<p id="post_tag_ids"><small>Tags: <%= raw @campaign.tags.map(&:name).map { |t| t }.join(', ') %></small></p>
  <p>
  <strong>User:</strong>
  <%= @campaign.user.name %>
</p>

<div id="todo_items_wrapper">
  <%= render @campaign.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>

<br><br><br><br>
<section class="section comments">
  <div class="container">

    <% if @campaign.comments.count != 0 %>
    <h2 class="subtitle is-5"><strong><%= @campaign.comments.count %></strong> Comments</h2>
    <% end %>
    <%= render @campaign.comments %>
    <div class="comment-form">
      <hr />
<!--      <h3 class="subtitle is-3">Leave a reply</h3>-->
      <%= render 'comments/form' %>
    </div>
  </div>
</section>


