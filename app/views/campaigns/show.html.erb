<h2 class="todo_list_title"><%= @campaign.title %></h2>
<p class="todo_list_sub_title"><%= @campaign.purpose %></p>

<p>
  <strong>Estimated duration:</strong>
  <%= @campaign.estimated_duration %>
</p>

<p>
  <strong>User:</strong>
  <%= @campaign.user.name %>
</p>

<div id="todo_items_wrapper">
  <%= render @campaign.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>

<br><br><br><br>
<section class="section comments">
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @campaign.comments.count %></strong> Comments</h2>
    <%= render @campaign.comments %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</section>
<h3> Comments :- </h3>
