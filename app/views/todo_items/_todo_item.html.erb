<div class="row clearfix">
  <% if todo_item.completed? %>
    <div class="complete">
      <%#= link_to "Mark as Complete", complete_campaign_todo_item_path(@campaign, todo_item.id), method: :patch %>

      <%= link_to complete_campaign_todo_item_path(@campaign, todo_item.id), method: :patch do %>
        <i style="opacity: 0.5;" class="fa fa-check"></i>
      <% end %>

    </div>
    <div class="todo_item">
      <p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", campaign_todo_item_path(@campaign.id, todo_item.id ), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% else %>
    <div class="complete">
      <%#= link_to "Mark as Complete", complete_campaign_todo_item_path(@campaign, todo_item.id), method: :patch %>
      <%= link_to complete_campaign_todo_item_path(@campaign, todo_item.id), method: :patch do %>
        <i class="fa fa-circle-thin"></i>
      <% end %>
    </div>
    <div class="todo_item">
      <p><%= todo_item.content %></p>
    </div>
    <div class="trash">
      <%= link_to "Delete", campaign_todo_item_path(@campaign.id, todo_item.id ), method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>
